
<div class="bg-white mt-5 mb-5 edit-card">
  <div class="row">
    <div class="col-md-3 border-right">
      <div class="mt-3 ms-3">
        <%= link_to admins_show_user_path, :class => "text-start back-arrow" do %>
          <i class="fas fa-arrow-left text-dark"></i>
        <% end %>
      </div>
      <div class="d-flex flex-column align-items-center text-center p-3 py-5">
        <%= image_tag("default_profile.jpg", class: "rounded-circle mt-5 mb-2", height: '150', width: '150') %>
        <span class="font-weight-bold"><%= @user.name %></span>
        <span class="text-black-50"><%= @user.email %></span>
        <span></span>
      </div>
    </div>
    <div class="col-md-5 border-right">
      <%= simple_form_for(:user, url: admins_edit_user_path, method: :put, local: true) do |f| %>
        <div class="form-inputs p-3 pt-4">
          <div class="mb-3 d-flex justify-content-center mt-5">
            <%= f.input :name,
                        required: true,
                        placeholder: 'Name',
                        input_html: { autocomplete: "name" }%>
            </div>
            <div class="mb-3 d-flex justify-content-center">
              <%= f.input :email,
                          required: true,
                          placeholder: 'Email',
                          input_html: { autocomplete: "email" }%>
            </div>
            <div class="mb-3 d-flex justify-content-center">
              <%= f.input :password,
                          placeholder: 'Enter your current password',
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          autocomplete: "new-password" %>
            </div>
            <div class="mb-3 d-flex justify-content-center">
              <%= f.input :password_confirmation, placeholder: 'Confirm Password',
                          autocomplete: "new-password" %>
            </div>
            <div class="form-actions mb-3 mt-3 d-flex justify-content-center p-1">
              <%= f.button :submit, "Edit", :class => 'btn btn-action btn-md btn-warning' %>
            </div>
          </div> 
        </div>
        <div class="col-md-4 p-3 pt-4">
          <div class="mb-1 mt-5 d-flex justify-content-center">
            <h5>Cancel account</h5>
          </div>
          <div class="mb-3 d-flex justify-content-center">
            <%= link_to "Cancel my account", admins_cancel_user_path, data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-sm btn-danger" %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>