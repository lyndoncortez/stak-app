<div class="container height-100 d-flex justify-content-center align-items-center row">
  <div class="card card-user text-center">
    <%= link_to admins_index_path, :class => "mt-3 text-start" do %>
      <i class="fas fa-arrow-left text-dark"></i>
    <% end %>
    <div class="py-4 p-2">
      <div>
        <%= image_tag("default_profile.jpg", class: "rounded-circle", height: '100', width: '100') %>
      </div>
      <div class="mt-3 d-flex flex-row justify-content-center">
        <h5><%= @user.name %></h5> 
      </div> 
      <span class="badge bg-dark mb-2"><%= @user.type %></span><br>
      <span>Member since <%= @user.created_at.strftime("%B %Y") %></span>
      <div class="mt-2">
        <%= link_to 'Edit', admins_edit_user_path(@user.id), :class => "btn btn-action btn-sm btn-warning text-dark ms-1" %> 
        <% if @user.approved == false %>
            <%= link_to 'Approve', admins_approve_user_path(@user.id), :class => "btn btn-action btn-sm btn-success text-light" %>
        <% end %>
      </div>
    </div>
    <div>
      <ul class="list-unstyled list">
        <li>
          <span class="font-weight-bold">Transactions</span>
          <div>
            <span class="mr-1">5</span>
            <i class="fa fa-angle-right"></i>
          </div>
        </li>
        <li>
          <span class="font-weight-bold">Earnings</span>
          <div>
            <span class="mr-1">45</span>
            <i class="fa fa-angle-right"></i>
          </div>
        </li>
      </ul>
    </div>
  </div>
</div>