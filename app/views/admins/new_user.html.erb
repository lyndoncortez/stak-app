
<div class="bg-white mt-5 mb-5 edit-card">
  <div class="row">
    <div class="col-md-3 border-right">
      <div class="mt-3 ms-3">
        <%= link_to admins_index_path, :class => "text-start back-arrow" do %>
          <i class="fas fa-arrow-left text-dark"></i>
        <% end %>
      </div>
      <div class="d-flex flex-column align-items-center text-center p-3 py-5">
        <%= image_tag("default_profile.jpg", class: "rounded-circle mt-5 mb-2", height: '150', width: '150') %>
        <span></span>
      </div>
    </div>
    <div class="col-md-5 border-right">
      <%= simple_form_for(:user, url: admins_new_user_path, method: :post, local: true) do |f| %>
        <div class="form-inputs p-3 pt-4">
          <div class="mb-3 d-flex justify-content-center mt-5">
            <%= f.input :name,
                        required: true,
                        placeholder: 'Enter your Name',
                        input_html: { autocomplete: "name" }%>
            </div>
            <div class="mb-3 d-flex justify-content-center">
              <%= f.input :email,
                          required: true,
                          placeholder: 'Enter your Email',
                          input_html: { autocomplete: "email" }%>
            </div>
            <div class="mb-3 d-flex justify-content-center">
              <%= f.input :password,
                          placeholder: 'Enter a Password',
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          autocomplete: "new-password" %>
            </div>
            <div class="mb-3 d-flex justify-content-center">
              <%= f.input :password_confirmation, placeholder: 'Confirm Password',
                          autocomplete: "new-password" %>
            </div>
            <div class="form-actions mb-3 mt-3 d-flex justify-content-center p-1">
              <%= f.button :submit, "Create", :class => 'btn btn-action btn-md btn-dark' %>
            </div>
          </div> 
        </div>
        <div class="col-md-4 p-3 pt-4">
          <div class="mb-1 mt-5 d-flex justify-content-center">
            <h5>Account Type</h5>
          </div>
          <div class="mb-3 d-flex justify-content-center w-75 mx-auto">
            <%= f.select :type, Admin::USER_TYPE_OPTIONS, {}, required: true, class: 'form-select' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
  