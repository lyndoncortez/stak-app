
<div class="bg-white mt-5 mb-5 edit-card">
  <div class="row">
    <div class="col-md-3 border-right">
      <div class="mt-3 ms-3">
        <%= link_to admins_index_path, :class => "text-start back-arrow" do %>
          <i class="fas fa-arrow-left text-dark"></i>
        <% end %>
      </div>
      <div class="d-flex flex-column align-items-center text-center p-3 py-5">
        <%= image_tag("default_profile.jpg", class: "rounded-circle mt-5 mb-2", height: '150', width: '150') %>
        <span></span>
      </div>
    </div>
    <div class="col-md-5 border-right">
      <%= form_with method: :post, scope: :user, url: admins_new_user_path , local:true do |f| %>
        <div class="p-3 pt-4">
          <div class="mt-5 d-flex justify-content-center">
            <h5>User Information</h5>
          </div>
          <div class="mb-3 mt-3 form-floating">
            <%= f.text_field :name,
                        required: true,
                        placeholder: 'Enter your Name',
                        class: 'form-control new-form' %>
            <%= f.label :name %>
          </div>
          <div class="mb-3 mx-auto form-floating">
            <%= f.text_field :email,
                          required: true,
                          placeholder: 'Enter your Email',
                          class: 'form-control new-form' %>
            <%= f.label :email %>
          </div>
          <div class="mb-3 mx-auto form-floating">
            <%= f.text_field :password,
                          placeholder: 'Enter a Password',
                          class: 'form-control new-form' %>
            <%= f.label :password %>
          </div>
          <div class="mb-3 mx-auto form-floating">
            <%= f.text_field :password_confirmation, placeholder: 'Confirm Password', class: 'form-control new-form',
                          autocomplete: "new-password" %>
            <%= f.label :password_confirmation %>
          </div>
          <div class="form-actions mb-3 mt-3 d-flex justify-content-center p-1">
            <%= f.submit "Create", :class => 'btn btn-action btn-md btn-dark' %>
          </div>
          </div> 
        </div>
        <div class="col-md-4 p-3 pt-4">
          <div class="mb-1 mt-5 d-flex justify-content-center">
            <h5>Account Type</h5>
          </div>
          <div class="mb-3 d-flex justify-content-center w-75 mx-auto">
            <%= f.select :type, Admin::USER_TYPE_OPTIONS, class: 'form-select' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
  