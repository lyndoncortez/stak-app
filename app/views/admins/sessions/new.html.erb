

 <%# <%= render partial: 'shared/flash' %>
  <div class="form-signin mx-auto mt-5 p-5">
    <h2 class ="mb-3 fw-normal text-center">Admin Login</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <div class="mb-3 d-flex justify-content-center">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      placeholder: 'Email',
                      label: false,
                      input_html: { autocomplete: "email" } %>
        </div>
        <div class="mb-3 d-flex justify-content-center">
          <%= f.input :password,
                      required: false,
                      placeholder: 'Password',
                      label: false,
                      input_html: { autocomplete: "current-password" } %>
        </div>
        <div class="mb-3 d-flex justify-content-center w-100">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
          
        
        <div class="form-actions mb-2 d-flex justify-content-center">
          <%= f.button :submit, "Log in", :class => 'btn btn-sm btn-primary' %>
        </div>
      </div>
    <% end %>
    <%= render "admins/shared/links" %>

  </div>
