<div class="d-flex flex-column dashboard animate slideIn">
  <h1>Buy Stocks</h1>
  <div class="mt-2">
    <%= link_to "#", :class => "mt-3 text-start fs-4 back-btn" do %>
      <i class="fas fa-arrow-left text-dark"></i>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card mx-auto mt-5">
        <div class="card-body pt-4 mx-auto">
          <%= form_with(url: stocks_buyer_create_path, method: :post, local: true) do |f| %>
            <div>
              <p class="fw-bold"><%= @stock.name %> (<%= @stock.symbol.upcase %>)</p>
              <p> Broker: <%= @broker.name  %> </p> 
            </div>
            <div class="mb-3 form-floating">
              <%= f.number_field :quantity, min: 1, step: 1, class: "form-control shadow-none", placeholder: 'Input qty.' %>
              <%= f.label "Qty.", class: "p-3" %>
            </div>

            <div class="mb-4 form-floating">
              <%= f.text_field :price, value: @stock.latest_price, readonly: true, class: "form-control shadow-none", placeholder: 'Stock Price' %>
              <%= f.label "Current price", class: "form-label" %>
            </div>

            <div class="mt-4 mb-3 text-center">
              <%= f.submit "Buy", class: "btn btn-md btn-primary fw-bold" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $(document).on("click", ".back-btn", function(event) {
  event.preventDefault()
  history.back()
})
</script>