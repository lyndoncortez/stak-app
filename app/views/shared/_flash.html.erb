<% if alert%>
  <div class="alert alert-danger flash text-center w-75 mx-auto">
    <%= alert %>
  </div>
<% end %>

<% flash.each do |type, msg| %>
  <div class="alert alert-warning alert-dismissible fade show alert-fixed w-50 mx-auto" role="alert">
    <%= msg %>.
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>